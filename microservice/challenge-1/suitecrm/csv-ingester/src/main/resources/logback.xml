<?xml version="1.0" encoding="UTF-8" ?>

<configuration debug="true">
    <appender name="STDOUT"
      class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.challenge.suitecrm" additivity="false">
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.apache.zookeeper" additivity="false">
        <level value="WARN" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.apache.kafka.clients.NetworkClient" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.apache.kafka" additivity="false">
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="io.confluent.kafka" additivity="false">
        <level value="WARN" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="kafka" additivity="false">
        <level value="WARN" />
        <appender-ref ref="STDOUT" />
    </logger>
    <root>
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
